<%-include('partials/header.ejs') %>
<body>
    <%-include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <a class="btn btn-primary mt-2" href="/perguntas">Perguntar</a>
        <hr>
        <% perguntas.forEach(pergunta =>{ %>

            <div class="card mt-4">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                    
                </div>
                <div class="card-footer">
                   <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-info">Responder</button></a>
                </div>
            </div>

            
            

       <% }) %>

    </div>
</body>
<%-include('partials/footer.ejs') %>
